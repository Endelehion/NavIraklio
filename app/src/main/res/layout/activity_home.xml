<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heraklion_small"
    tools:context="com.example.varda.naviraklio.Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/goProfileBtn"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/goMapBtn"
        android:layout_alignBottom="@+id/goMapBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:minHeight="69dp"
        android:text="Profile"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <Button
        android:id="@+id/goMapBtn"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/goLogoutBtn"
        android:layout_column="2"
        android:layout_marginBottom="-15dp"
        android:layout_marginRight="-89dp"
        android:layout_row="0"
        android:layout_weight="1"
        android:minHeight="69dp"
        android:text="Instant Map"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline3" />

    <Button
        android:id="@+id/goLogoutBtn"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/goOrganizerBtn"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_row="2"
        android:layout_weight="1"
        android:minHeight="69dp"
        android:text="Logout"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <Button
        android:id="@+id/goOrganizerBtn"
        android:layout_width="123dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/goProfileBtn"
        android:layout_column="2"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_row="2"
        android:layout_weight="1"
        android:elevation="1dp"
        android:minHeight="69dp"
        android:padding="20dp"
        android:text="Organizer"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="313dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="198dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.64" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="268dp" />

</android.support.constraint.ConstraintLayout>
