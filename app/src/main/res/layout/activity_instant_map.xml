<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/instantDestLabel"
        tools:context="com.example.varda.naviraklio.InstantMap" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/instantDestLabel"
        android:animateLayoutChanges="false"
        android:clipChildren="false"
        android:entries="@+strings/place_type"
        android:prompt="@+strings/prompt_spinner"
        android:background="#B4FFFFFF" />

    <Button
        android:id="@+id/findButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="FIND"
        android:layout_below="@+id/instantDestLabel"
        android:layout_toEndOf="@+id/spinner" />

    <TextView
        android:id="@+id/instantDestLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="left|center"
        android:textSize="16sp"
        android:theme="@style/white_transparent_background" />

</RelativeLayout>