<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.3"
        android:background="@drawable/cinema_frame_small"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <Button
        android:id="@+id/moviePickedCancelBtn"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/moviePickedConfirmBtn"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/moviePickedTitle"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moviePickedInfo"
        android:layout_width="235dp"
        android:layout_height="123dp"
        android:layout_marginTop="42dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/moviePickedImage"
        android:layout_width="123dp"
        android:layout_height="163dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/american_made_poster" />

    <TextView
        android:id="@+id/moviePickedDescription"
        android:layout_width="357dp"
        android:layout_height="118dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="165dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/daysRadioList"
        android:layout_width="178dp"
        android:layout_height="171dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/hoursRadioList"
        android:layout_width="182dp"
        android:layout_height="171dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/dateListView"
        android:layout_width="181dp"
        android:layout_height="169dp"
        android:layout_marginBottom="57dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/setMovieDateBtn"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:text="Set Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/movieBackBtn"
        android:layout_width="114dp"
        android:layout_height="51dp"
        android:layout_marginBottom="0dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>