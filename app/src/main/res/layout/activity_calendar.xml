<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.Organizer">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="330dp"
        android:layout_height="386dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginRight="-807dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11" />

    <Button
        android:id="@+id/newAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/editAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/newAp"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/delAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:layout_marginTop="104dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        android:orientation="vertical"
        app:layout_constraintGuide_end="61dp" />

    <ListView
        android:id="@+id/listAp"
        android:layout_width="217dp"
        android:layout_height="273dp"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:layout_marginTop="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_begin="349dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>
