<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heraklion_large"
    tools:context="com.example.varda.naviraklio.Organizer">

    <Button
        android:id="@+id/navigateBtn"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginBottom="318dp"
        android:layout_marginLeft="8dp"
        android:text="Navigate"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/listAp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="430dp" />

    <Button
        android:id="@+id/newAp"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginBottom="260dp"
        android:layout_marginLeft="8dp"
        android:text="New"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintLeft_toRightOf="@+id/listAp" />

    <Button
        android:id="@+id/delAp"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginBottom="83dp"
        android:layout_marginLeft="8dp"
        android:text="Delete"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintLeft_toRightOf="@+id/listAp" />

    <ListView
        android:id="@+id/listAp"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:theme="@style/white_transparent_backround"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
