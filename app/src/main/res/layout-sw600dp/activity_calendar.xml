<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.Organizer">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="348dp"
        android:layout_height="403dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="99dp"
        tools:layout_editor_absoluteY="412dp"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/listAp"
        android:layout_width="352dp"
        android:layout_height="312dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:scrollbars="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
        android:id="@+id/newAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="266dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9" />

    <Button
        android:id="@+id/editAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginRight="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9" />

    <Button
        android:id="@+id/delAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginRight="-10dp"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.111"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        android:orientation="vertical"
        app:layout_constraintGuide_end="152dp" />

</android.support.constraint.ConstraintLayout>
