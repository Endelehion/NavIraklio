<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.NewAppointment">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="191dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="Address"
        android:textSize="35dp"
        tools:text="Address"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="237dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="369dp"
        android:layout_height="66dp"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="41dp"
        android:layout_toStartOf="@+id/findButton"
        android:animateLayoutChanges="false"
        android:clipChildren="false"
        android:entries="@+strings/place_type"
        android:prompt="@+strings/prompt_spinner"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        android:layout_marginStart="134dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="403dp"
        android:layout_height="85dp"
        android:text="New Appointment"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline13" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="134dp"
        android:layout_height="68dp"
        android:layout_marginTop="161dp"
        android:text="Type"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="134dp"
        android:layout_height="77dp"
        android:layout_marginTop="258dp"
        android:text="Starts"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/timeEndText"
        android:layout_width="149dp"
        android:layout_height="65dp"
        android:layout_marginLeft="205dp"
        android:ems="10"
        android:inputType="time"
        android:textAlignment="center"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        tools:text="0:00"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="189dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="414dp"
        android:text="Duration"
        android:textAlignment="center"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline13"
        app:layout_constraintGuide_begin="120dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="120dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/setDateTimeBtn"
        android:layout_width="177dp"
        android:layout_height="155dp"
        android:text="set Date &amp; Time"
        android:textSize="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="175dp"
        android:layout_height="94dp"
        android:text="Confirm"
        android:textSize="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="175dp"
        android:layout_height="94dp"
        android:text="Cancel"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="309dp"
        android:layout_height="98dp"
        android:text="TextView"
        android:layout_marginRight="71dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="204dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="138dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="@+id/guideline13" />

</android.support.constraint.ConstraintLayout>
