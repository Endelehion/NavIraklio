<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button_custom_style</item>
        <item name="android:listViewStyle">@style/white_transparent_backround</item>
    </style>


    <style name="button_custom_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:background">@drawable/button_shape</item>
        </style>

    <style name="white_transparent_backround" parent="android:Widget.ListView">
        <item name="android:background">@color/cast_expanded_controller_progress_text_color</item>
        <item name="android:backgroundTint">@color/cast_libraries_material_featurehighlight_text_header_color</item>
    </style>




    <!-- Application theme. -->



</resources>
