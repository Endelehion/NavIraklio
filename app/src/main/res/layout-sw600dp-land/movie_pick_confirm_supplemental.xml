<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/moviePickedCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/moviePickedConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/moviePickedTitle"
        android:layout_width="235dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        tools:layout_editor_absoluteX="125dp" />

    <TextView
        android:id="@+id/moviePickedInfo"
        android:layout_width="235dp"
        android:layout_height="123dp"
        android:layout_marginTop="42dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="125dp"
        android:layout_marginRight="0dp" />

    <ImageView
        android:id="@+id/moviePickedImage"
        android:layout_width="123dp"
        android:layout_height="163dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/american_made_poster"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/moviePickedDescription"
        android:layout_width="357dp"
        android:layout_height="118dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="165dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/daysRadioList"
        android:layout_width="178dp"
        android:layout_height="171dp"
        android:layout_marginBottom="57dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp" />

    <ListView
        android:id="@+id/hoursRadioList"
        android:layout_width="182dp"
        android:layout_height="171dp"
        android:layout_marginBottom="57dp"
        android:layout_marginRight="-22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="283dp" />

</android.support.constraint.ConstraintLayout>