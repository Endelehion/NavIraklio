<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.Organizer">

    <Button
        android:id="@+id/navigateBtn"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginBottom="169dp"
        android:layout_marginRight="249dp"
        android:text="Navigate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/newAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp" />

    <Button
        android:id="@+id/delAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintLeft_toRightOf="@+id/listAp"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="131dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="359dp"
        android:layout_height="294dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="39dp"
        android:text="Appointments"
        android:textAlignment="gravity"
        android:textSize="23sp"
        app:layout_constraintLeft_toRightOf="@+id/datePicker"
        android:layout_marginLeft="-15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <ListView
        android:id="@+id/listAp"
        android:layout_width="215dp"
        android:layout_height="317dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/datePicker"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline8"
        android:orientation="vertical"
        app:layout_constraintGuide_end="283dp" />

</android.support.constraint.ConstraintLayout>
