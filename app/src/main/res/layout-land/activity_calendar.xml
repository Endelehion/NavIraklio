<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.Organizer">

    <ListView
        android:id="@+id/listAp"
        android:layout_width="207dp"
        android:layout_height="281dp"
        android:layout_marginLeft="0dp"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/newAp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="207dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8" />

    <Button
        android:id="@+id/editAp"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:layout_marginLeft="207dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8" />

    <Button
        android:id="@+id/delAp"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:text="Delete"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="207dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline8" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="320dp"
        android:layout_height="301dp"
        android:scaleX="0.88"
        app:layout_constraintRight_toLeftOf="@+id/guideline8"
        android:layout_marginRight="-87dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="296dp" />

</android.support.constraint.ConstraintLayout>
