<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.varda.naviraklio.Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/Profile"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignBaseline="@+id/Map"
        android:layout_alignBottom="@+id/Map"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:minHeight="69dp"
        android:onClick="goProfile"
        android:text="Profile"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <Button
        android:id="@+id/Calendar"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Profile"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:minHeight="69dp"
        android:onClick="goCalendar"
        android:padding="20dp"
        android:text="Calendar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintBottom_toTopOf="@+id/guideline5" />

    <Button
        android:id="@+id/Map"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Logout"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:minHeight="69dp"
        android:onClick="goMap"
        android:text="Map"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline4" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignBottom="@+id/Calendar"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:minHeight="69dp"
        android:onClick="goLogout"
        android:text="Logout"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/HomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="1"
        android:layout_row="0"
        android:contextClickable="false"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-225dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="120dp"
        tools:layout_editor_absoluteY="191dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_end="204dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="388dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="206dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="206dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="106dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="106dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
