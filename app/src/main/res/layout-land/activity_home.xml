<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heraklion_small_land"
    tools:context="com.example.varda.naviraklio.Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <Button
        android:id="@+id/goProfileBtn"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignBaseline="@+id/goMapBtn"
        android:layout_alignBottom="@+id/goMapBtn"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"

        android:minHeight="69dp"
        android:text="Profile"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/goOrganizerBtn"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/goProfileBtn"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_weight="1"

        android:minHeight="69dp"
        android:padding="20dp"
        android:text="Organizer"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3" />

    <Button
        android:id="@+id/goMapBtn"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/goLogoutBtn"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_weight="1"
        android:minHeight="69dp"
        android:text="Instant Map"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline4" />

    <Button
        android:id="@+id/goLogoutBtn"
        android:layout_width="135dp"
        android:layout_height="83dp"
        android:layout_alignBottom="@+id/goOrganizerBtn"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_weight="1"
        android:minHeight="69dp"
        android:text="Logout"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="120dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="191dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="204dp"
        tools:layout_editor_absoluteX="388dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="106dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp" />

</android.support.constraint.ConstraintLayout>
