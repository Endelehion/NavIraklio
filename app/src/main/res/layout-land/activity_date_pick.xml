<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varda.naviraklio.DateTimePick">


    <Button
        android:id="@+id/okButtonDate"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="6dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/cancelButtonDate"
        android:layout_width="88dp"
        android:layout_height="47dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="0dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline15"
        tools:layout_editor_absoluteY="235dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline15"
        app:layout_constraintGuide_begin="6dp"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline16"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="513dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/dateToggle"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:text="Date"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline15" />

    <Button
        android:id="@+id/timeToggle"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:checked="false"
        android:text="Time"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/titleDate"
        android:layout_width="404dp"
        android:layout_height="38dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="5dp"
        android:text="N/A"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="404dp"
        android:layout_height="239dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="94dp"
        android:layout_marginBottom="5dp">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="404dp"
            android:layout_height="271dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="417dp"
            android:layout_height="255dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
