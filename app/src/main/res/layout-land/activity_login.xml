<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_screen_large_land"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.varda.naviraklio.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="@string/action_sign_in"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="2dp" />

    <TextView
        android:id="@+id/sign_up_label"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/action_sign_up_link"
        android:textSize="18sp"
        android:theme="@style/white_transparent_backround"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_btn"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="117dp" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="354dp"
        android:layout_height="108dp"
        android:layout_marginLeft="119dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/login_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4FFFFFF">

                <AutoCompleteTextView
                    android:id="@+id/textInputEditTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_username"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:theme="@style/black_text_opaque" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B4FFFFFF">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified|flagNavigatePrevious"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:theme="@style/black_text_opaque" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
